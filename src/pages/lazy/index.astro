  }

  .filter-btn.active {
    background-color: #ea580c;
    color: white;
    border-color: #ea580c;
  }

  .item-card.hidden {
    display: none;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .animate-fade-in {
    animation: fadeIn 0.3s ease-out forwards;
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Filter items
  const filterButtons = document.querySelectorAll('.filter-btn');
  const itemCards = document.querySelectorAll('.item-card');

  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const filter = button.getAttribute('data-filter') || 'all';

      // Update active button
      filterButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');

      // Filter items
      itemCards.forEach(card => {
        const category = card.getAttribute('data-category') || '';
        if (filter === 'all' || category === filter) {
          card.classList.remove('hidden');
        } else {
          card.classList.add('hidden');
        }
      });
    });
  });

  // Quiz functionality
  const quizCheckboxes = document.querySelectorAll('.quiz-checkbox');
  const scoreResult = document.getElementById('score-result');

  quizCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', () => {
      const checked = Array.from(quizCheckboxes).some(c => c.checked);
      if (checked) {
        scoreResult?.classList.remove('hidden');
      } else {
        scoreResult?.classList.add('hidden');
      }
    });
  });
</script>
