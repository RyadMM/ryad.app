---
import PortfolioLayout from '@/layouts/PortfolioLayout.astro'
import Hero from '@/components/portfolio/Hero.astro'
import ProjectCard from '@/components/portfolio/ProjectCard.astro'

const projects = [
  {
    title: 'Lazy',
    description: 'Le Guide du Paresseux Organisé — A thoughtful approach to productivity and organized laziness.',
    href: '/lazy',
    accent: 'orange' as const,
  },
  {
    title: 'Copilot Context Engineering',
    description: 'Maîtriser le contexte GitHub Copilot — De la théorie à la pratique avec les briques LEGO.',
    href: '/copilot',
    accent: 'indigo' as const,
  },
]
---
<PortfolioLayout title="Ryad — Creative Developer">
  <div class="max-w-4xl mx-auto px-6 py-20 md:py-32">
    <Hero />

    <section class="fade-in fade-in-delay-1">
      <h2 class="text-sm uppercase tracking-widest text-muted mb-8 font-medium">Projects</h2>
      <div class="space-y-4">
        {projects.map(project => (
          <ProjectCard {...project} />
        ))}

        <!-- Coming soon placeholder -->
        <article class="p-6 md:p-8 rounded-2xl bg-zinc-900/50 border border-zinc-800/50">
          <div class="flex items-center gap-3 text-muted text-sm">
            <span class="w-2 h-2 rounded-full bg-accent animate-pulse"></span>
            <span>More projects coming soon</span>
          </div>
        </article>
      </div>
    </section>
  </div>
</PortfolioLayout>
