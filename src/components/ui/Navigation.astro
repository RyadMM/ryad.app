---
import LanguageToggle from './LanguageToggle.astro'

interface Props {
  currentLang: 'en' | 'fr'
}

const { currentLang } = Astro.props
---
<nav class="sticky top-0 z-50 backdrop-blur-md border-b border-cyan-500/20">
  <div class="max-w-5xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href={`/${currentLang}/`} class="relative group" aria-label="Home">
        <!-- Tron logo - glowing hexagon -->
        <div class="w-10 h-10 relative">
          <svg viewBox="0 0 100 100" class="w-full h-full">
            <polygon
              points="50,5 95,27.5 95,72.5 50,95 5,72.5 5,27.5"
              fill="none"
              stroke="url(#tron-gradient)"
              stroke-width="2"
              class="group-hover:drop-shadow-[0_0_10px_rgba(0,240,255,0.8)] transition-all duration-300"
            />
            <polygon
              points="50,20 80,35 80,65 50,80 20,65 20,35"
              fill="rgba(0, 240, 255, 0.1)"
              stroke="rgba(0, 240, 255, 0.3)"
              stroke-width="1"
            />
            <defs>
              <linearGradient id="tron-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="#00f0ff" />
                <stop offset="100%" stop-color="#00a8ff" />
              </linearGradient>
            </defs>
          </svg>
        </div>
      </a>
      <LanguageToggle currentLang={currentLang} />
    </div>
  </div>
</nav>
<style>
  nav {
    background: rgba(5, 5, 8, 0.9);
    box-shadow: 0 4px 30px rgba(0, 240, 255, 0.1);
  }
</style>
