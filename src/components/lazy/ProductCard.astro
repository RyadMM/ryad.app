---
import type { LazyItem } from '@/data/lazy-items'

interface Props {
  product: LazyItem
  showAlternatives?: boolean
}

const { product, showAlternatives = false } = Astro.props

// Icon mapping for Lucide-style names
const icons: Record<string, string> = {
  'hanger': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2v20"/><path d="M6 6l6-3 6 3"/><path d="M6 18a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v0a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2z"/></svg>',
  'package': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m7.5 4.27 9 5.15"/><path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"/><path d="m3.3 7 8.7 5 8.7-5"/><path d="M12 22v-9"/></svg>',
  'shirt': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.38 3.4a1.6 1.6 0 0 0-2.22 0l-1.62 1.62a2 2 0 0 1-2.82 0L9.5 1.75a2 2 0 0 0-2.82 0L4.84 3.6a1.6 1.6 0 0 0 0 2.22L7.5 8.5V21a1 1 0 0 0 1 1h7a1 1 0 0 0 1-1V8.5l2.66-2.68a1.6 1.6 0 0 0 0-2.22Z"/></svg>',
  'hook': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 11a4 4 0 0 1 4 4v6a2 2 0 0 1-2 2H9a2 2 0 0 1-2-2v-6a4 4 0 0 1 4-4Z"/><path d="M11 3a3 3 0 0 0-3 3v5"/></svg>',
  'laundry': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/><path d="M21 12V9a2 2 0 0 0-2-2h-2.25"/><path d="M6 5a1 1 0 0 0 1 1h2"/><path d="M6 10a1 1 0 0 0 1 1h2"/><path d="M6 15a1 1 0 0 0 1 1h2"/><path d="M15 15a1 1 0 0 0 1 1h2"/></svg>',
  'key': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="7" cy="7" r="4"/><path d="m21 21-9.3-9.3"/><path d="M11 7a4 4 0 1 1-8 0 4 4 0 0 1 8 0z"/><path d="m21 21-5-5"/></svg>',
  'rotate-cw': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12a9 9 0 1 1-9-9c2.52 0 4.93 1 6.74 2.74L21 8"/><path d="M21 3v5h-5"/></svg>',
  'file': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8Z"/><polyline points="14 2 14 8 20 8"/><line x1="16" x2="8" y1="13" y2="13"/><line x1="16" x2="8" y1="17" y2="17"/><line x1="10" x2="8" y1="9" y2="9"/></svg>',
  'box': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"/><path d="m3.3 7 8.7 5 8.7-5"/><path d="M12 22v-9"/></svg>',
  'cart': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>',
  'cabinet': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M3 9h18"/><path d="M9 21V9"/></svg>',
  'minimize-2': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="4 14 10 14 10 20"/><polyline points="20 10 14 10 14 4"/><line x1="14" x2="21" y1="10" y2="3"/><line x1="3" x2="10" y1="21" y2="14"/></svg>',
}

const iconSvg = icons[product.icon] || icons['package']
---

<div class="product-card group bg-zinc-900 border border-zinc-800 p-6 rounded-xl hover:border-zinc-700 transition-all" data-category={product.category}>
  <!-- Header: Icon + Essential Badge -->
  <div class="flex justify-between items-start mb-4">
    <div class="text-zinc-400">
      <div set:html={iconSvg} class="w-10 h-10" />
    </div>
    {product.essential && (
      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-orange-500/10 text-orange-400 border border-orange-500/20">
        Essentiel
      </span>
    )}
  </div>

  <!-- Effort Score -->
  <div class="flex items-center gap-2 mb-3">
    <span class="text-xs text-zinc-500">Effort requis:</span>
    <div class="flex gap-1">
      {Array.from({ length: 5 }).map((_, i) => (
        <div class={`w-1.5 h-1.5 rounded-full transition-colors ${i < product.effortScore ? 'bg-orange-500' : 'bg-zinc-800'}`} />
      ))}
    </div>
  </div>

  <!-- Product Info -->
  <h3 class="text-lg font-medium text-zinc-100 mb-1">{product.name}</h3>
  <p class="text-sm text-zinc-400 mb-2">{product.tagline}</p>
  <p class="text-sm text-zinc-500 leading-relaxed mb-4">{product.description}</p>

  <!-- Pricing -->
  <div class="flex items-baseline gap-2 mb-4">
    <span class="text-base font-semibold text-zinc-200">
      {product.priceRange.min === 0 ? '-' : `$${product.priceRange.min}-$${product.priceRange.max}`}
    </span>
    <span class="text-xs text-zinc-500 uppercase tracking-wide">{product.priceTier}</span>
  </div>

  <!-- ADHD Benefit Expandable -->
  <details class="group/details mb-4">
    <summary class="cursor-pointer text-sm text-orange-400 hover:text-orange-300 list-none flex items-center gap-1">
      Pourquoi ça marche
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-open/details:rotate-180">
        <path d="m6 9 6 6 6-6"/>
      </svg>
    </summary>
    <p class="mt-2 text-sm text-zinc-400 leading-relaxed">{product.whyItWorks}</p>
  </details>

  <!-- Alternatives -->
  {showAlternatives && product.alternatives && product.alternatives.length > 0 && (
    <div class="pt-4 border-t border-zinc-800">
      <p class="text-xs text-zinc-500 mb-2">Alternatives économiques:</p>
      <ul class="text-sm space-y-1 text-zinc-400">
        {product.alternatives.map(alt => <li class="flex items-start gap-2"><span class="text-zinc-600">—</span>{alt}</li>)}
      </ul>
    </div>
  )}
</div>

<style>
  .product-card {
    animation: fadeIn 0.4s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .product-card.hidden {
    display: none;
  }
</style>
