---
import PortfolioLayout from '@/layouts/PortfolioLayout.astro'
import { lazyItems, itemsByCategory, essentialItems, niceToHaveItems } from '@/data/lazy-items'
import EffortChart from '@/components/lazy/EffortChart.tsx'
import ProductCard from '@/components/lazy/ProductCard.astro'
import PrincipleCard from '@/components/lazy/PrincipleCard.astro'
import { getLocale } from '@/utils/i18n'

export function getStaticPaths() {
  return [{ params: { lang: 'en' } }, { params: { lang: 'fr' } }]
}

const lang = getLocale(Astro.params.lang)
---

<PortfolioLayout title="Organisation pour Paresseux | Systèmes qui marchent avec zéro énergie" lang={lang}>
  <div class="bg-zinc-950 text-zinc-100 min-h-screen antialiased selection:bg-orange-500/20 selection:text-orange-300">
    <!-- Navbar -->
    <nav class="sticky top-0 z-50 bg-zinc-950/90 backdrop-blur-md border-b border-zinc-800">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          <div class="flex items-center gap-2">
            <span class="font-medium text-lg tracking-tight text-zinc-200">Organisation <span class="text-orange-500">Paresseux</span></span>
          </div>
          <div class="hidden md:flex space-x-8">
            <a href="#methodologie" class="text-zinc-400 hover:text-orange-500 transition-colors font-medium text-sm">Méthodologie</a>
            <a href="#zones" class="text-zinc-400 hover:text-orange-500 transition-colors font-medium text-sm">Zones</a>
            <a href="#materiel" class="text-zinc-400 hover:text-orange-500 transition-colors font-medium text-sm">Matériel</a>
            <a href="#habits" class="text-zinc-400 hover:text-orange-500 transition-colors font-medium text-sm">Habitudes</a>
          </div>
          <button id="mobile-menu-btn" class="md:hidden text-zinc-400 text-xl px-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" x2="21" y1="6" y2="6"/><line x1="3" x2="21" y1="12" y2="12"/><line x1="3" x2="21" y1="18" y2="18"/></svg>
          </button>
        </div>
      </div>
      <div id="mobile-menu" class="hidden md:hidden bg-zinc-950 border-b border-zinc-800 px-4 py-2">
        <a href="#methodologie" class="block py-3 w-full text-left text-zinc-400 border-b border-zinc-900">Méthodologie</a>
        <a href="#zones" class="block py-3 w-full text-left text-zinc-400 border-b border-zinc-900">Zones</a>
        <a href="#materiel" class="block py-3 w-full text-left text-zinc-400 border-b border-zinc-900">Matériel</a>
        <a href="#habits" class="block py-3 w-full text-left text-zinc-400">Habitudes</a>
      </div>
    </nav>

    <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-16">
      <!-- Hero Section -->
      <header class="text-center space-y-6 py-12 md:py-20">
        <div class="inline-block px-3 py-1 bg-orange-500/10 text-orange-400 rounded-full text-sm font-medium mb-2 border border-orange-500/20">Systèmes pour TDAH et personnes fatiguées</div>
        <h1 class="text-4xl md:text-6xl font-semibold text-zinc-100 tracking-tight leading-tight">
          Des systèmes qui marchent <br class="hidden md:block" /> <span class="text-zinc-400">quand t'as zéro énergie</span>
        </h1>
        <p class="text-lg md:text-xl text-zinc-400 max-w-2xl mx-auto leading-relaxed">
          Pas de pliage de chaussettes. Pas de méthodes compliquées. Juste des systèmes pratiques qui fonctionnent même les jours difficiles.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center pt-6">
          <a href="#materiel" class="bg-zinc-100 text-zinc-900 px-8 py-3 rounded-lg font-medium hover:bg-zinc-200 transition-colors text-center">
            Voir les essentiels
          </a>
          <a href="#methodologie" class="text-zinc-300 hover:text-zinc-100 transition-colors text-center">
            Comprendre la méthode
          </a>
        </div>
      </header>

      <!-- Section: Methodology -->
      <section id="methodologie" class="scroll-mt-24">
        <div class="bg-zinc-900/50 rounded-2xl p-6 md:p-8 border border-zinc-800">
          <div class="mb-8 pb-6 border-b border-zinc-800">
            <h2 class="text-2xl md:text-3xl font-semibold text-zinc-100 mb-3">Pourquoi le rangement traditionnel échoue</h2>
            <p class="text-zinc-400 text-lg leading-relaxed">
              Le problème n'est pas ta motivation. C'est la friction cognitive. Les systèmes traditionnels demandent trop d'étapes invisibles.
            </p>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
            <!-- Chart -->
            <div class="bg-zinc-900 rounded-xl p-6 border border-zinc-800">
              <h3 class="text-center font-medium text-zinc-300 mb-4 text-sm">Effort cognitif par méthode</h3>
              <div class="chart-container" style="position: relative; width: 100%; height: 280px;">
                <EffortChart client:load />
              </div>
              <p class="text-center text-xs text-zinc-500 mt-4">Moins d'étapes = Plus de chances de ranger</p>
            </div>

            <!-- Core Principles -->
            <div class="space-y-4">
              <PrincipleCard
                number={1}
                title="La loi des 2 secondes"
                description="Si ranger prend plus de 2 secondes, l'objet finira au sol. Élimine les barrières: cintres, couvercles, portes de placard."
                example="Un crochet = 1 seconde. Un cintre dans un placard = 5 secondes."
              />
              <PrincipleCard
                number={2}
                title="Visibilité totale"
                description="Hors de vue, hors de l'esprit. Si tu ne le vois pas, ça n'existe pas. Les rangements ouverts triomphent."
                research="Études sur la mémoire visuelle et TDAH"
              />
              <PrincipleCard
                number={3}
                title="Le contenant fourre-tout"
                description="Un panier ouvert dans chaque zone n'est pas du désordre. C'est une zone tampon qui empêche le chaos total."
                example="Les clés vont toujours dans le bol d'entrée. Le tri vient plus tard."
              />
            </div>
          </div>
        </div>
      </section>

      <!-- Section: DROP Zones -->
      <section id="zones" class="scroll-mt-24">
        <div class="mb-8">
          <h2 class="text-2xl md:text-3xl font-semibold text-zinc-100">DROP Zones</h2>
          <p class="text-zinc-400 mt-2 text-lg">Designated Right Here Places — L'endroit exact où les choses atterrissent.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Zone Entrée -->
          <div class="bg-zinc-900/50 border border-zinc-800 p-6 rounded-xl hover:border-zinc-700 transition-colors">
            <div class="w-10 h-10 bg-orange-500/10 rounded-lg flex items-center justify-center mb-4 text-orange-400">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"/><path d="M14 2v4a2 2 0 0 0 2 2h4"/><path d="M10 9H8a2 2 0 0 0-2 2v4"/></svg>
            </div>
            <h3 class="text-lg font-medium text-zinc-100 mb-2">Zone Entrée</h3>
            <p class="text-sm text-zinc-500 mb-4">Là où tout explose en arrivant.</p>
            <ul class="space-y-2 text-sm text-zinc-300">
              <li class="flex items-start gap-2"><span class="text-orange-500">—</span>Crochets muraux au point de décision</li>
              <li class="flex items-start gap-2"><span class="text-orange-500">—</span>Bol pour clés/contenu des poches</li>
              <li class="flex items-start gap-2"><span class="text-orange-500">—</span>Panier ouvert pour courrier</li>
            </ul>
          </div>

          <!-- Zone Vetements -->
          <div class="bg-zinc-900/50 border border-orange-500/30 p-6 rounded-xl relative overflow-hidden">
            <div class="absolute top-0 right-0 bg-orange-500/10 text-orange-400 text-xs font-medium px-3 py-1 border-l border-orange-500/20">Priorité</div>
            <div class="w-10 h-10 bg-orange-500/10 rounded-lg flex items-center justify-center mb-4 text-orange-400">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.38 3.4a1.6 1.6 0 0 0-2.22 0l-1.62 1.62a2 2 0 0 1-2.82 0L9.5 1.75a2 2 0 0 0-2.82 0L4.84 3.6a1.6 1.6 0 0 0 0 2.22L7.5 8.5V21a1 1 0 0 0 1 1h7a1 1 0 0 0 1-1V8.5l2.66-2.68a1.6 1.6 0 0 0 0-2.22Z"/></svg>
            </div>
            <h3 class="text-lg font-medium text-zinc-100 mb-2">Zone Vêtements</h3>
            <p class="text-sm text-zinc-500 mb-4">L'ennemi du pliage.</p>
            <ul class="space-y-2 text-sm text-zinc-300">
              <li class="flex items-start gap-2"><span class="text-orange-500">—</span>Portant ou patères pour le mi-sale</li>
              <li class="flex items-start gap-2"><span class="text-orange-500">—</span>Bacs ouverts (pas de couvercles)</li>
              <li class="flex items-start gap-2"><span class="text-orange-500">—</span>Paniers à linge sans couvercle</li>
            </ul>
          </div>

          <!-- Zone Salon -->
          <div class="bg-zinc-900/50 border border-zinc-800 p-6 rounded-xl hover:border-zinc-700 transition-colors">
            <div class="w-10 h-10 bg-orange-500/10 rounded-lg flex items-center justify-center mb-4 text-orange-400">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 9V7a2 2 0 0 0-2-2H6a2 2 0 0 0-2 2v2"/><path d="M4 11v9a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-9"/><path d="M4 11h16"/><path d="M11 11v9"/><path d="M19 11v9"/></svg>
            </div>
            <h3 class="text-lg font-medium text-zinc-100 mb-2">Zone Salon</h3>
            <p class="text-sm text-zinc-500 mb-4">Où traînent les manettes et papiers.</p>
            <ul class="space-y-2 text-sm text-zinc-300">
              <li class="flex items-start gap-2"><span class="text-orange-500">—</span>Panier au sol pour les objets qui traînent</li>
              <li class="flex items-start gap-2"><span class="text-orange-500">—</span>Trieur vertical pour courrier</li>
              <li class="flex items-start gap-2"><span class="text-orange-500">—</span>Poubelle visible (pas cachée)</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Section: Products -->
      <section id="materiel" class="scroll-mt-24">
        <div class="flex flex-col md:flex-row justify-between items-end mb-8 pb-4 border-b border-zinc-800">
          <div>
            <h2 class="text-2xl md:text-3xl font-semibold text-zinc-100">Matériel Essentiel</h2>
            <p class="text-zinc-400 mt-2">Ce qui marche vraiment. Pas de design, juste fonctionnel.</p>
          </div>
          <div class="flex flex-wrap gap-2 mt-4 md:mt-0" id="filter-buttons">
            <button data-filter="all" class="filter-btn active px-4 py-2 rounded-lg border border-zinc-700 text-sm font-medium transition-all bg-zinc-800 text-zinc-100">Tous</button>
            <button data-filter="clothing" class="filter-btn px-4 py-2 rounded-lg border border-zinc-700 text-sm font-medium transition-all text-zinc-400 hover:bg-zinc-800">Vêtements</button>
            <button data-filter="entry" class="filter-btn px-4 py-2 rounded-lg border border-zinc-700 text-sm font-medium transition-all text-zinc-400 hover:bg-zinc-800">Entrée</button>
            <button data-filter="living" class="filter-btn px-4 py-2 rounded-lg border border-zinc-700 text-sm font-medium transition-all text-zinc-400 hover:bg-zinc-800">Salon</button>
            <button data-filter="kitchen" class="filter-btn px-4 py-2 rounded-lg border border-zinc-700 text-sm font-medium transition-all text-zinc-400 hover:bg-zinc-800">Cuisine</button>
            <button data-filter="bathroom" class="filter-btn px-4 py-2 rounded-lg border border-zinc-700 text-sm font-medium transition-all text-zinc-400 hover:bg-zinc-800">Salle de bain</button>
          </div>
        </div>

        <!-- Essential Items -->
        <div class="mb-6">
          <h3 class="text-sm font-medium text-orange-400 mb-4">Essentiels</h3>
          <div id="essential-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {essentialItems.map(item => (
              <ProductCard product={item} showAlternatives={false} />
            ))}
          </div>
        </div>

        <!-- Nice to Have Items -->
        {niceToHaveItems.length > 0 && (
          <div>
            <h3 class="text-sm font-medium text-zinc-500 mb-4">En plus si nécessaire</h3>
            <div id="extras-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              {niceToHaveItems.map(item => (
                <ProductCard product={item} showAlternatives={false} />
              ))}
            </div>
          </div>
        )}
      </section>

      <!-- Section: Habits -->
      <section id="habits" class="scroll-mt-24">
        <div class="bg-zinc-900/50 rounded-2xl p-6 md:p-8 border border-zinc-800">
          <h2 class="text-2xl md:text-3xl font-semibold text-zinc-100 mb-6">Habitudes maintenables</h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-lg font-medium text-zinc-200 mb-3">Reset nocturne de 10 minutes</h3>
              <p class="text-zinc-400 text-sm leading-relaxed mb-4">
                Avant de dormir, un passage rapide. Pas de nettoyage profond. Juste remettre les choses à leur place DROP.
              </p>
              <ul class="space-y-2 text-sm text-zinc-500">
                <li class="flex items-center gap-2">
                  <div class="w-4 h-4 rounded border border-zinc-700 flex items-center justify-center">
                    <div class="w-2 h-2 rounded-full bg-orange-500/50"></div>
                  </div>
                  Objets au sol dans le panier
                </li>
                <li class="flex items-center gap-2">
                  <div class="w-4 h-4 rounded border border-zinc-700 flex items-center justify-center">
                    <div class="w-2 h-2 rounded-full bg-orange-500/50"></div>
                  </div>
                  Vaisselle dans l'évier (pas forcément lavée)
                </li>
                <li class="flex items-center gap-2">
                  <div class="w-4 h-4 rounded border border-zinc-700 flex items-center justify-center">
                    <div class="w-2 h-2 rounded-full bg-orange-500/50"></div>
                  </div>
                  Clés dans le bol d'entrée
                </li>
              </ul>
            </div>

            <div>
              <h3 class="text-lg font-medium text-zinc-200 mb-3">Règle un entrée, un sortie</h3>
              <p class="text-zinc-400 text-sm leading-relaxed mb-4">
                Pour chaque nouvel objet qui entre, un objet sort. Zéro maintenance une fois établi.
              </p>
              <div class="bg-zinc-900 rounded-lg p-4 border border-zinc-800">
                <p class="text-xs text-zinc-500 mb-2">Exemple:</p>
                <p class="text-sm text-zinc-300">
                  Tu achètes une nouvelle paire de chaussures → Une vieille paire va au don.
                  <br class="mb-2" />
                  <span class="text-orange-400/80">Résultat: pas d'accumulation, pas de décision à prendre.</span>
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Section: Assessment -->
      <section class="bg-zinc-900 rounded-2xl p-8 md:p-12 text-center border border-zinc-800">
        <h2 class="text-xl md:text-2xl font-medium text-zinc-100 mb-4">Auto-évaluation</h2>
        <p class="text-zinc-500 mb-8 max-w-xl mx-auto">Coche ce qui s'applique à ta situation actuelle:</p>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 max-w-2xl mx-auto text-left mb-8">
          <label class="flex items-center gap-3 p-4 bg-zinc-950 rounded-lg cursor-pointer hover:bg-zinc-900 transition-colors border border-zinc-800">
            <input type="checkbox" class="w-4 h-4 accent-orange-500 quiz-checkbox" />
            <span class="text-sm text-zinc-300">Vêtements sur une chaise depuis +3 jours</span>
          </label>
          <label class="flex items-center gap-3 p-4 bg-zinc-950 rounded-lg cursor-pointer hover:bg-zinc-900 transition-colors border border-zinc-800">
            <input type="checkbox" class="w-4 h-4 accent-orange-500 quiz-checkbox" />
            <span class="text-sm text-zinc-300">Je perds mes clés régulièrement</span>
          </label>
          <label class="flex items-center gap-3 p-4 bg-zinc-950 rounded-lg cursor-pointer hover:bg-zinc-900 transition-colors border border-zinc-800">
            <input type="checkbox" class="w-4 h-4 accent-orange-500 quiz-checkbox" />
            <span class="text-sm text-zinc-300">Linge propre mélangé au sale</span>
          </label>
          <label class="flex items-center gap-3 p-4 bg-zinc-950 rounded-lg cursor-pointer hover:bg-zinc-900 transition-colors border border-zinc-800">
            <input type="checkbox" class="w-4 h-4 accent-orange-500 quiz-checkbox" />
            <span class="text-sm text-zinc-300">Je déteste plier (viscéralement)</span>
          </label>
        </div>

        <div id="score-result" class="hidden">
          <p class="text-lg font-medium text-orange-400 mb-2">Ce système est fait pour toi</p>
          <p class="text-zinc-500 text-sm">Arrête de te forcer à utiliser des systèmes qui ne marchent pas. Commence par les essentiels.</p>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="border-t border-zinc-900 py-8 mt-12 text-center text-zinc-600 text-sm">
      <p>Systèmes d'organisation pour personnes occupées et fatiguées</p>
    </footer>
  </div>
</PortfolioLayout>

<style>
  .chart-container canvas {
    width: 100% !important;
    height: 100% !important;
  }

  .filter-btn.active {
    background-color: #ea580c;
    color: white;
    border-color: #ea580c;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .animate-fade-in {
    animation: fadeIn 0.3s ease-out forwards;
  }

  .product-card.hidden {
    display: none;
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Filter items
  const filterButtons = document.querySelectorAll('.filter-btn');
  const productCards = document.querySelectorAll('.product-card');

  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const filter = button.getAttribute('data-filter') || 'all';

      // Update active button
      filterButtons.forEach(btn => {
        btn.classList.remove('active', 'bg-orange-600', 'text-white', 'border-orange-600');
        btn.classList.add('text-zinc-400', 'hover:bg-zinc-800', 'border-zinc-700');
      });
      button.classList.add('active');
      button.classList.remove('text-zinc-400', 'hover:bg-zinc-800', 'border-zinc-700');

      // Filter items
      productCards.forEach(card => {
        const category = card.getAttribute('data-category') || '';
        if (filter === 'all' || category === filter) {
          card.classList.remove('hidden');
        } else {
          card.classList.add('hidden');
        }
      });
    });
  });

  // Quiz functionality
  const quizCheckboxes = document.querySelectorAll('.quiz-checkbox');
  const scoreResult = document.getElementById('score-result');

  quizCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', () => {
      const checked = Array.from(quizCheckboxes).some(c => c.checked);
      if (checked) {
        scoreResult?.classList.remove('hidden');
      } else {
        scoreResult?.classList.add('hidden');
      }
    });
  });

  // Close mobile menu on link click
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
    });
  });
</script>
