---
interface Props {
  number: number
  title: string
  description: string
  example?: string
  research?: string
}

const { number, title, description, example, research } = Astro.props
---

<div class="principle-card bg-zinc-900/50 border border-zinc-800 p-6 rounded-lg hover:border-zinc-700 transition-colors">
  <div class="flex items-start gap-4">
    <div class="flex-shrink-0 w-10 h-10 bg-orange-500/10 rounded-lg flex items-center justify-center border border-orange-500/20">
      <span class="text-orange-400 font-mono font-bold">{number}</span>
    </div>
    <div class="flex-1">
      <h3 class="text-lg font-medium text-zinc-100 mb-2">{title}</h3>
      <p class="text-zinc-400 text-sm leading-relaxed mb-3">{description}</p>
      {example && (
        <p class="text-sm border-l-2 border-zinc-700 pl-3 italic text-zinc-500">
          {example}
        </p>
      )}
      {research && (
        <p class="text-xs text-zinc-600 mt-3">
          Source: {research}
        </p>
      )}
    </div>
  </div>
</div>

<style>
  .principle-card {
    animation: fadeIn 0.5s ease-out backwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
